<h1>New Restaurant</h1>
<%= simple_form_for @restaurant, url: restaurants_path do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "Add New Restaurant" class: "btn btn-primary"%>
<% end %>

<%= link_to "Back to Restaurant Details", restaurant_path(@restaurant), class: "btn btn-secondary" %>
